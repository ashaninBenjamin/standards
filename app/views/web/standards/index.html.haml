%h1= t(".header")
.squiggly-border
= link_to t('.new_standard'), new_standard_path, class: 'btn btn-info'
%br
%br
.items
  - if @standards.any?
    - @standards.each do |one|
      .item= link_to one.code_with_name, standard_path(one.link), style: "margin-left:#{(one.depth - 1) * 20}px;"
  - else
    = t(".no_one_standard")
