%h1= @standard.code_with_name
.squiggly-border
%strong
  %p
    %strong= "#{t('.state')}: "
    = object_state_label @standard
- if @parent
  %h4
    = "#{t('.parent')}: "
    = link_to @parent.code_with_name, standard_path(id: @parent.link)
= link_to t('.edit_standard'), edit_standard_path(id: @standard.link), class: 'btn btn-info'
%h3= t('.content')
%p.lead= raw @standard.content
- if @children.any?
  .span6
    %h4= "#{t('.children')}:"
    - @children.each do |child|
      %h5= link_to child.code_with_name, standard_path(id: child.link)
