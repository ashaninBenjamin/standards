- content_for(:not_signed_title) do
  = t('.header')

= simple_form_for @client, url: client_path, html: {class: 'form-horizontal'} do |f|
  .input-prepend
    %span.add-on
      %i.radmin-icon.radmin-user
    = f.input_field :email, class: 'input-large'
  .input-prepend
    %span.add-on
      %i.radmin-icon.radmin-locked
    = f.input_field :password, class: 'input-large'
  .input-prepend
    %span.add-on
      %i.radmin-icon.radmin-locked
    = f.input_field :password_confirmation, class: 'input-large'
  .input-prepend
    %span.add-on
      %i.radmin-icon.radmin-locked
    = f.input_field :first_name, class: 'input-large'
  .input-prepend
    %span.add-on
      %i.radmin-icon.radmin-locked
    = f.input_field :last_name, class: 'input-large'
  .form-actions
    = link_to t('.sign_in'), new_session_path
    = f.submit class: "btn btn-large btn-inverse pull-right"
